

        <main class="edit">
            <!-- Edit Page (Only for logged-in users) -->
            <section id="create">
                <div class="form">
                    <h2>Edit item</h2>
                    <form class="create-form" method="post">
                        <input type="text" value="{{name}}" name="name" id="name" placeholder="Name" />
                        <input type="text" value="{{years}}" name="years" id="years" placeholder="Years" />
                        <input type="text" value="{{kind}}" name="kind" id="kind" placeholder="Kind"/>
                        <input type="text" value="{{image}}" name="image" id="animal-img" placeholder="Image url"/>
                        <input type="text" value="{{need}}" name="need" id="needs-of" placeholder="Needs of"/>
                        <input type="text" value="{{location}}" name="location" id="location" placeholder="Location"/>
                        <textarea id="description" placeholder="Description..." name="description">
                            {{description}}
                        </textarea>

                        <button type="submit">Edit</button>
                    </form>
                </div>
            </section>
        </main>