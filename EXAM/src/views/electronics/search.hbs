<section class="search">
    <h1>Search</h1>

    <form class="search-form" method="post">
        <input type="text" class="search-name" name="searchText" placeholder="Search Name...">
        <input type="text" class="search-type" name="type" placeholder="Search Type...">
        <button type="submit" class="btn-search">Search</button>
    </form>

    {{#if electronics}}
        <div class="search-result">
            <div class="search-list">
                {{#each electronics}}
                    {{>electronic}}
                {{/each}}
            </div>
        </div>
    {{else}}
        <div class="no-match">
            <p>No match was found!</p>
        </div>
    {{/if}}

</section>